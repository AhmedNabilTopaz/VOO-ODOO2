<odoo>
	<data>
		<record id="salesperson_wizard_wizard_form" model="ir.ui.view">
			<field name="name">salesperson.wizard</field>
			<field name="model">salesperson.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Select Salesperson">
					<group colspan="4" string="Select Salesperson">
						<field name="user_id" options="{'no_create': True}"/>
					</group>
					<footer>
						<button name="setSalesPerson" class="oe_highlight" string="Set Salesperson" type="object" />
						<button string="Cancel" class="btn-default" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>	
</data>	
</odoo>
