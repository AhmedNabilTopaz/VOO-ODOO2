<odoo>
    <record id="inherit_voo_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.voo.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='production_lot_info']" postion="inside">
                <div class="col-12 col-lg-12 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="day_before_expiry"/>
                        <field name="day_before_expiry"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="alert_before_expiry"/>
                        <field name="alert_before_expiry"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="remove_before_expiry"/>
                        <field name="remove_before_expiry"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
